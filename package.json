{
  "name": "masaiui",
  "private": true,
  "version": "1.0.0",
  "description": "Masai UI Design system",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "pkg": "manypkg run",
    "fix:pkgs": "manypkg fix",
    "dev": "preconstruct dev",
    "prepare": "husky install",
    "version:pkgs": "changeset version",
    "prestart": "yarn && yarn bootstrap",
    "postinstall": "manypkg check",
    "bootstrap": "preconstruct validate",
    "build": "preconstruct build",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --maxWorkers=25% --watch --onlyChanged",
    "test:ci": "jest --color --runInBand --ci",
    "lint": "concurrently yarn:lint:*",
    "lint:eslint": "eslint --ext .ts,.tsx ./packages/**/src/*",
    "lint:types": "tsc --noEmit",
    "commit": "git-cz",
    "changelog:gen": "ts-node scripts/changelog-generate.ts",
    "changelog:write": "ts-node scripts/changelog-write.ts",
    "pkg:add": "plop --plopfile ./plopfile.js",
    "release": "changeset publish",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook && sb extract"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.3",
    "@changesets/cli": "^2.21.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@emotion/jest": "^11.8.0",
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@fontsource/open-sans": "^4.5.6",
    "@fontsource/poppins": "^4.5.3",
    "@jest/types": "^27.5.1",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-controls": "^6.4.19",
    "@storybook/addon-storysource": "^6.4.19",
    "@storybook/addon-toolbars": "^6.4.19",
    "@storybook/cli": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@storybook/theming": "^6.4.19",
    "@swc-node/jest": "^1.4.3",
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lodash": "^4.17.21",
    "node-plop": "^0.30.0",
    "plop": "^3.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "storybook-addon-performance": "^0.16.1",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
